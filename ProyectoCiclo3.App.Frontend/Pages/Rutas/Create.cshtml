@page
@model ProyectoCiclo3.App.Frontend.Pages.FormRutaModel
@{
}

<h1>Registra Ruta</h1>

<form method="post">
  @*<label for="id" class="form-label">id:</label>
    <input type="number" class="form-control" id="id" name="id" placeholder="id">*@
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="Origen" class="form-label">Origen:</label>
      <select name="origen" class="form-control">
        <option value="">-</option>
        @foreach (var Estacion in Model.Estaciones)
        {
          <option value="@Estacion.id">@Estacion.nombre - @Estacion.direccion</option>
        }
      </select>
    </div>
    <div class="form-group col-md-4">
      <label for="Destino" class="form-label">Destino:</label>
      <select name="destino" class="form-control">
        <option value="">-</option>
        @foreach (var Estacion in Model.Estaciones)
        {
          <option value="@Estacion.id">@Estacion.nombre - @Estacion.direccion</option>
        }
      </select>
    </div>
    <div class="form-group col-md-4">
      <label for="Tiempo_estimado" class="form-label">Tiempo estimado:</label>
      <input type="number" class="form-control" id="tiempo_estimado" placeholder="Tiempo estimado"
        name="tiempo_estimado" Required>
    </div>

    <div>
      <button type="submit" class="btn btn-success">Enviar</button>
      <a asp-page="./List" class="btn btn-primary table-btn"><i class="fas fa-undo-alt"></i></a>
    </div>


</form>
