@page
@model ProyectoCiclo3.App.Frontend.Pages.EditBusModel
@{
    var bus = Model.Bus;
}

<h1>Editar bus</h1>
<form method="post">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="id">ID</label>
      <input type="number" class="form-control" id="id" placeholder="id" asp-for="@bus.id" readonly>
    </div>
    <div class="form-group col-md-6">
      <label for="marca">Marca</label>
      <select class="form-control" id="marca" asp-for="@bus.marca">
        <option selected>@bus.marca</option>
        <option>Mercedes_Benz</option>
        <option>Hyundai</option>
        <option>Mitsubishi</option>
        <option>Volkswagen</option>
        <option>Joyling</option>
        <option>Foton</option>
        <option>Scania</option>
        <option>JAC</option>
        <option>Higer</option>
        <option>Volvo</option>
        <option>Chevrolet</option>
        <option>Nissan</option>
      </select>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="modelo">Modelo</label>
      <input type="number" class="form-control" id="modelo" placeholder="Modelo" asp-for="@bus.modelo">
      <span class="text-danger" asp-validation-for="@bus.modelo"></span> 
    </div>
    <div class="form-group col-md-6">
      <label for="kilometraje">Kilometraje</label>
      <input type="number" class="form-control" id="kilometraje" placeholder="Kilometraje" asp-for="@bus.kilometraje" Required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="numero_asientos">Número de Asientos</label>
      <input type="number" class="form-control" id="numero_asientos" placeholder="Número de asientos" asp-for="@bus.numero_asientos" Required>
    </div>
    <div class="form-group col-md-6">
      <label for="placa">Placa</label>
      <input type="text" class="form-control" id="placa" placeholder="Placa" asp-for="@bus.placa" Required>
    </div>
  </div>
  <div>
    <button type="submit" class="btn btn-success">Enviar</button>
    <a asp-page="./List" class="btn btn-primary table-btn"><i class="fas fa-undo-alt"></i></a>
  </div>
</form>
