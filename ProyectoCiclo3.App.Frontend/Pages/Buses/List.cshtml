@page
@model ProyectoCiclo3.App.Frontend.Pages.ListBusModel
@{
}
 
<h1>Buses de nuestra flota</h1>
<table class="table">
    <thead>
        <th>Id</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Kilometraje</th>
        <th>Numero de asiento</th>
        <th>Placa</th>
        <th>Acciones</th>
    </thead>
    @foreach (var bus in Model.Buses)
    {
        <tr>
            <td>@bus.id</td>
            <td>@bus.marca</td>
            <td>@bus.modelo</td>
            <td>@bus.kilometraje</td>
            <td>@bus.numero_asientos</td>
            <td>@bus.placa</td>
            <td>
              @*<a class="btn btn-info" asp-page="./Details" asp-route-busId="@bus.id"><i class="fas fa-adjust"></i>Ver</a>*@
              <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-busId="@bus.id">
                  <i class="fas fa-eye" title="Ver"></i>
              </a>
              @*<a class="btn btn-info" asp-page="./Edit" asp-route-busId="@bus.id">Editar</a>*@
              <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-busId="@bus.id">
                  <i class="fas fa-edit" aria-hidden="true" title="Editar"></i>
              </a>
              <form method="POST">
              <input type="number" class="form-control d-none" id="id" name="id" placeholder="id" asp-for="@bus.id">
                  <button type="submit"class="btn btn-danger" href=""><i class="fas fa-trash-alt" title="Â¡ELIMINAR!"></i></button>
              </form>
            </td>
        </tr>
    }
</table>