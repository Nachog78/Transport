@page
@model ProyectoCiclo3.App.Frontend.Pages.ListEstacionModel
@{
}
 
<h1>Estaciones</h1>

<div class="text-center">
<table class="table">
    <thead class="table-dark">
        <th>Id</th>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Coordenada X</th>
        <th>Coordenada Y</th>
        <th>Tipo</th>
        <th>Acciones</th>
    </thead>
    @foreach (var estacion in Model.Estaciones)
    {
        <tr>
            <td>@estacion.id</td>
            <td>@estacion.nombre</td>
            <td>@estacion.direccion</td>
            <td>@estacion.coord_x</td>
            <td>@estacion.coord_y</td>
            <td>@estacion.tipo</td>
            <td>
              <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-estacionId="@estacion.id"><i class="fas fa-eye" title="Ver"></i></a>
              <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-estacionId="@estacion.id"><i class="fas fa-edit" aria-hidden="true" title="Editar"></i></a>
              <a>
                <form method="POST">
                  <input type="hidden" class="form-control d-none" id="id" name="id" placeholder="id" asp-for="@estacion.id">
                  <button type="submit"class="btn btn-danger" href=""><i class="fas fa-trash-alt" title="Eliminar"></i></button>
                </form>
              </a>
              </td>
        </tr>
    }
</table>
</div>
